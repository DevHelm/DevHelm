<idea-plugin>
    <id>com.comcontrol</id>
    <name>ComControl</name>
    <vendor email="iain@iain.rocks" url="https://iain.rocks">ComControl</vendor>
    <description>
        <![CDATA[
        <p>Plugin for ComControl integration with JetBrains IDEs.</p>
        ]]>
    </description>

    <depends>com.intellij.modules.platform</depends>

    <idea-version since-build="241"/>

    <actions>
        <action id="com.comcontrol.actions.SayHelloAction"
                class="com.comcontrol.ide.actions.SayHelloAction"
                text="ComControl: Say Hello"
                description="A sample action from ComControl plugin">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
